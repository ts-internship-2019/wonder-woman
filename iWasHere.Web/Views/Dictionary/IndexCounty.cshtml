
@model IEnumerable<iWasHere.Domain.DTOs.CountyModel>
@using Kendo.Mvc.UI

@{
    ViewData["Title"] = "IndexCounty";
}
<div class="demo-section k-content">
    @(Html.Kendo().Button()
        .Name("btnAdd")
        .Content("Add County")
        .HtmlAttributes(new { type = "button" })
        .Events(ev => ev.Click("onClick")))
</div>


@(Html.Kendo().Grid<iWasHere.Domain.DTOs.CountyModel>()
        .Name("grid")
        .Columns(columns =>
        {
            columns.Bound(c => c.Name).Title("County Name");
            columns.Bound(c => c.Code).Title("County Code");
            columns.Bound(c => c.CountryName).Title("Country Name");
        })
        .HtmlAttributes(new { style = "height: 380px;" })
        .Scrollable()
        .Groupable()
        .Sortable()
        .Pageable(pageable => pageable
            .Refresh(true)
            .PageSizes(true)
            .ButtonCount(5))
            .DataSource(dataSource => dataSource
                .Ajax()
                .Read(read => read.Action("Paging_Orders", "Dictionary"))
                )
            .Scrollable(scr => scr.Height(430))
)  
<script type="text/javascript">
$(document).ready(function () {
    $('#btnAdd').click(function (e)
  {
      window.location = '@Url.Action("AddNewCounty", "Dictionary")';
  });
});
</script>