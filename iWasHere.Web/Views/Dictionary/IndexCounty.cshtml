@model IEnumerable<iWasHere.Domain.DTOs.CountyModel>
@{
    ViewData["Title"] = "IndexCounty";
}

<div class="demo-section k-content">
    @(Html.Kendo().Button()
        .Name("btnAdd")
        .Content("Add County")
        .HtmlAttributes(new { type = "button" })
        .Events(ev => ev.Click("onClick")))
</div>


<div>
    <table>
        <tr>
            <td>
                <label for="countyName">County Name:</label>
                @(Html.Kendo().TextBox()
                    .HtmlAttributes(new
                            {
                        id = "filterName"
                            })
                    .Name("filterName")
                    .Value("")
                )
            </td>
            <td>
                <label for="countriesCB">Country Name:</label>
            </td>
            <td>
                @(Html.Kendo().ComboBox()
                        .Name("countries")
                        .Placeholder("Select a country")
                        .DataTextField("Name")
                        .DataValueField("CountryId")
                        .HtmlAttributes(new { style = "width:100%;" })
                        .Filter(FilterType.Contains)
                        .AutoBind(false)
                        .MinLength(3)
                        .DataSource(source =>
                            {
                                source.Read(read =>
                            {
                                read.Action("Countries_Read_ForCB", "Dictionary");
                            })
                                .ServerFiltering(true);
                            })
                )
            </td>
            <td>
                @(Html.Kendo().Button()
                    .Name("filterBtn")
                    .Content("Filter")
                    .Icon("filter")
                    .HtmlAttributes(new { type = "button" })
                    .Events(ev => ev.Click("onClick")))
            </td>
            <td>
                @(Html.Kendo().Button()
                    .Name("clearFilterBtn")
                    .Icon("clear-filter")
                    .Content("Reset Filter")
                    .HtmlAttributes(new { type = "button" })
                    .Events(ev => ev.Click("onClick")))
            </td>
        </tr>
    </table>
</div>


@(Html.Kendo().Grid<iWasHere.Domain.DTOs.CountyModel>()
                .Name("grid")
                .Columns(columns =>
                {
                    columns.Bound(c => c.Name).Title("County Name");
                    columns.Bound(c => c.Code).Title("County Code");
                    columns.Bound(c => c.CountryName).Title("Country Name");
                    columns.Command(d => { d.Destroy(); });
                    columns.Template("<a class='k-button' href='/Dictionary/AddNewCounty?Id=#=CountyId# '> Edit </a>").Width(150);
                })
                .HtmlAttributes(new { style = "height: 380px;" })
                .Scrollable()
                .Groupable()
                .Sortable()
                .Pageable(pageable => pageable
                    .Refresh(true)
                    .PageSizes(true)
                    .ButtonCount(5))
                .DataSource(dataSource => dataSource
                    .Ajax()
                    .Read(read => read.Action("Counties_Read", "Dictionary").Data("filterName"))
            .PageSize(5)
            .ServerOperation(true)
            .Model(model => model.Id(p => p.CountyId))
            .Destroy(update => update.Action("DestroyCounty", "Dictionary"))
         )
                .Scrollable(scr => scr.Height(430))
            
         )



<script type="text/javascript">
$(document).ready(function () {
    $('#btnAdd').click(function (e)
  {
      window.location = '@Url.Action("AddNewCountry", "Dictionary")';
  });
});
</script>

