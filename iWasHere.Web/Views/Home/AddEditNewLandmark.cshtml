        @(Html.Kendo().ComboBoxFor(c => c.LandmarkTypeId)
                //.Name("landmarks")
                .Placeholder("Selecteaza tip atractie!")
                .DataTextField("Name")
                .DataValueField("LandmarkTypeId")
                .HtmlAttributes(new { style = "width:100%;" })
